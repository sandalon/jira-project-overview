/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #454545
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 20px 10px
  color #fff
  font-size 25px
  text-align center

  h5
    font-family 'Quicksand'
    font-size 12px

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px
  p
    margin-bottom 20px

p
  line-height 1.8

footer
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-family 'Quicksand'
  font-size 13px
  text-align center


.modalDialog
  position fixed
  font-family 'Quicksand'
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0,0,0,0.8)
  z-index 99999
  opacity 0
  transition: opacity 400ms ease-in
  pointer-events none